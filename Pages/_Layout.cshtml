<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Azure AI Chat</title>
    <style>
        body {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
            margin: 2rem;
            background: #0f172a;
            color: #e5e7eb;
        }

        header {
            margin-bottom: 2rem;
        }

            header h1 {
                margin: 0;
                font-size: 2rem;
            }

        main {
            max-width: 960px;
        }

        a {
            color: #38bdf8;
        }
    </style>
</head>
<body>
    <header>
        <h1>Azure AI Chat API</h1>
        <p>Minimal ASP.NET Core 8 API + Razor UI</p>
    </header>

    <main>
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>